@model IEnumerable<ExamenMVCAjax.Models.Factura>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="listFacturas">
    <thead>
        <tr>
            <th><label>Id</label></th>
            <th><label>Fecha</label></th>
            <th><label>Cliente</label></th>
            <th><label>Total</label></th>
            <th><label>SubTotal</label></th>
            <th><label>Impuesto</label></th>
            <th></th>
        </tr>
    </thead>

    <tbody></tbody>
</table>

@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {
            getFacturas();
        })

        var isUpdatable = false;

        function getFacturas() {
            $.ajax({
                url: '/Facturas/Index/',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $("#listFacturas tbody").html("");
                    var rows = '';
                    $.each(data, function (i, item) {
                        rows += "<tr>"
                        rows += "<td>" + item.Id + "</td>"
                        rows += "<td>" + item.Fecha + "</td>"
                        rows += "<td>" + item.Cliente + "</td>"
                        rows += "<td>" + item.Total + "</td>"
                        rows += "<td><button type='button' id='btnEdit' class='btn btn-default' onclick='return getDetailBook(" + item.Id + ")'>Edit</button> <button type='button' id='btnDelete' class='btn btn-danger' onclick='return deleteBook(" + item.Id + ")'>Delete</button></td>"
                        rows += "</tr>";
                        $("#listFacturas tbody").html(rows);
                    });
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }

        function getDetailBook(id) {
            $("#title").text("Details");
            $.ajax({
                url: '/Book/Get/' + id,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $("#Id").val(data.Id);
                    $("#Name").val(data.Fecha);
                    $("#Author").val(data.Cliente);
                    $("#Price").val(data.Price);
                    isUpdatable = true;
                    $("#bookModal").modal('show');
                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }

        $("#btnSave").click(function (e) {

            var data = {
                Id: $("#Id").val(),
                Name: $("#Name").val(),
                Author: $("#Author").val(),
                Price: $("#Price").val()
            }

            if (!isUpdatable) {
                $.ajax({
                    url: '/Book/Create/',
                    type: 'POST',
                    dataType: 'json',
                    data: data,
                    success: function (data) {
                        getBooks();
                        $("#bookModal").modal('hide');
                        clear();
                    },
                    error: function (err) {
                        alert("Error: " + err.responseText);
                    }
                })
            }
            else {
                $.ajax({
                    url: '/Book/Update/',
                    type: 'POST',
                    dataType: 'json',
                    data: data,
                    success: function (data) {
                        getBooks();
                        isUpdatable = false;
                        $("#bookModal").modal('hide');
                        clear();
                    },
                    error: function (err) {
                        alert("Error: " + err.responseText);
                    }
                })
            }
        });

        function deleteBook(id) {
            var confirmDelete = confirm("Do you want to delete this book ?");
            if (confirmDelete) {
                $.ajax({
                    url: "/Book/Delete/" + id,
                    type: "POST",
                    dataType: 'json',
                    success: function (data) {
                        getBooks();
                    },
                    error: function (err) {
                        alert("Error: " + err.responseText);
                    }
                });
            }
        }

        $("#btnCreateNew").click(function () {
            $("#title").text("Create New");
        })

        $("#btnClose").click(function () {
            clear();
        });

        function clear() {
            $("#Id").val("");
            $("#Name").val("");
            $("#Author").val("");
            $("#Price").val("");
        }

    </script>
}


